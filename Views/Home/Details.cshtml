@model Filme
@{
    ViewData["Title"] = "FilmeFlix";
    var generos = (List<Genero>)ViewData["Generos"];
    string Cor(string nome)
    {
        return generos
        .Where(t => t.Nome == nome)
        .Select(t => t.Cor)
        .FirstOrDefault();
    }
}

<section class="pt-5 container">
    <div class="row">
        @*<div class="col text-center">
        <a href="#" class="btn btn-lg btn-outline-dark">001 - Bulbasaur</a>
        </div> *@
        <div class="col text-center">
            <h1 class="fs-1">@Model.Nome<span class="fs-2 text-secondary"> Nº @Model.Id</span></h1>
        </div>
        @*<div class="col text-center">
        <a href="#" class="btn btn-lg btn-outline-dark">003 - Venusaur</a>
        </div>*@
    </div>

    <div class="row mt-3">
        <div class="col-lg-5 p-0">
            <img class="img-fluid cursor-pointer" src="@Model.Imagem" alt="@Model.Nome">
        </div>
        <div class="col-lg-7 fs-5 mt-4">
            <p class="mb-3"><strong>Descrição:</strong>@Model.Descricao</p>
            <p class="mb-3"><strong>Classificação:</strong>@Model.Classificacao</p>
            <p class="mb-3"><strong>Duração:</strong>@Model.Duracao</p>
            <p class="fw-bold">Gênero</p>
            <div class="btn-group">
                @foreach (var genero in Model.Genero)
                {
                    <a href="#" class="btn btn-lg text-white" style="background-color:@Cor(genero)">
                        @genero
                    </a>
                }
            </div>
        </div>
    </div>
</section>