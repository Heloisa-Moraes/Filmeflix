@model List<Filme>
@{
    ViewData["Title"] = "Home";
}


<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>FilmeFlix</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter">
                    Ver Todos os filmes</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#aab">Fantasia</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#76e">Ação</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#fc3">Ficção Científica</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#e9e">Comédia</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#66b">Animação</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#f42">Drama</button>
                <button class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#6cf">Aventura</button>

            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var filmes in Model)
            {
              
                <div class="col">
                    <div class="card shadow-sm cursor-pointer " >
                        <img src="@filmes.Imagem" class="card-img-top" width="75%" height="300"
                            alt="O Senhor dos Anéis: O Retorno do Rei" />
                        <div class="card-body">
                            <p class="card-text mb-0">Nº @filmes.Id</p>
                            <h3 class="card-title">@filmes.Nome</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="#" class="btn my-2 text-white" style="background-color:#7c5">@filmes.Genero</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }    
            
            <div id="zeroPokemon" class="col-lg-12 text-center" hidden>
                <h1 class="my-3 text-danger">Nenhum Filme Encontrado</h1>
            </div>
        </div>


    </div>
</div>